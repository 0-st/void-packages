# Template build file for 'perl-Fuse'.
pkgname=perl-Fuse
version=0.13
revision=1
wrksrc="Fuse-$version"
distfiles="${CPAN_SITE}/Fuse/Fuse-$version.tar.gz"
build_style=perl-module
short_desc="Write filesystems in Perl using FUSE"
maintainer="Juan RP <xtraeme@gmail.com>"
homepage="http://search.cpan.org/~dpavlin/Fuse-0.13/Fuse.pm"
license="GPL-2"
checksum=7ae8b37381d2eba1dc143b9aa2baca1ca1f74caef5aca9d213baf3328a7ea239
long_desc="
 This lets you implement filesystems in perl, through the FUSE
 (Filesystem in USErspace) kernel/lib interface."

Add_dependency run glibc
Add_dependency run fuse
Add_dependency build pkg-config
Add_dependency build fuse-devel
Add_dependency full perl

pre_build()
{
	# Missing symbols, correct ones have Perl_ prefix in libperl.
	sed -i -e "s|\(clone_params_.*\)|Perl_\1|g" Fuse.xs
}
