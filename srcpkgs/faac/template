# Template file for 'faac'
pkgname=faac
version=1.28
revision=7
build_style=gnu-configure
configure_args="--with-mp4v2 --disable-static"
makedepends="automake libtool libmp4v2-devel>=2.0.0"
short_desc="AAC audio encoder library"
maintainer="Juan RP <xtraeme@gmail.com>"
homepage="http://www.audiocoding.com/"
license="GPL-2, BSD"
distfiles="${SOURCEFORGE_SITE}/faac/faac-${version}.tar.gz"
checksum=c5141199f4cfb17d749c36ba8cfe4b25f838da67c22f0fec40228b6b9c3d19df

pre_configure() {
	find . -type f -print0 | xargs -0 sed -i 's/\r//g'
	sed -e 's,AM_CONFIG_HEADER,AC_CONFIG_HEADERS,g' -i configure.in
	./bootstrap
}

post_install() {
	vinstall libfaac/kiss_fft/COPYING 644 usr/share/licenses/faac
}

faac-devel_package() {
	depends="libmp4v2-devel>=2.0.0 faac>=${version}"
	short_desc="${short_desc} -- development files"
	pkg_install() {
		vmove usr/include
	}
}

faac_package() {
	pkg_install() {
		vmove usr
	}
}
