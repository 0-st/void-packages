# Template file for 'libsexy'
pkgname=libsexy
version=0.1.11
revision=3
distfiles="http://releases.chipx86.com/$pkgname/$pkgname/$pkgname-$version.tar.gz"
build_style=gnu_configure
short_desc="Collection of additional GTK+ widgets"
