Add_dependency run qt-qmake
Add_dependency run qt

do_install()
{
	mkdir -p ${DESTDIR}/usr/lib ${DESTDIR}/usr/bin
	for f in lrelease lupdate moc qdbuscpp2xml qdbusxml2cpp qt3to4 \
		rcc uic uic3; do
		mv ${SRCPKGDESTDIR}/usr/bin/${f} ${DESTDIR}/usr/bin || return 1
	done
	mv ${SRCPKGDESTDIR}/usr/include ${DESTDIR}/usr || return 1
	mv ${SRCPKGDESTDIR}/usr/lib/*.a ${DESTDIR}/usr/lib || return 1
	mv ${SRCPKGDESTDIR}/usr/lib/*.prl ${DESTDIR}/usr/lib || return 1
	mv ${SRCPKGDESTDIR}/usr/lib/pkgconfig ${DESTDIR}/usr/lib || return 1
}
