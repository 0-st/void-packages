pre_build() {
	case $XBPS_TARGET_MACHINE in
		arm* )  echo "Removing built in test from arm build. Won't run on host x86_64 machine"
				sed -i '59,61d' CMakeLists.txt ;;
	esac
}

post_install() {
	vlicense LICENSE
}
