post_install() {
	rm ${DESTDIR}/usr/share/man/man8/stunnel.??.8
	vsconf tools/stunnel.conf-sample
	rm -r ${DESTDIR}/etc/stunnel ${DESTDIR}/usr/share/doc/stunnel
}
