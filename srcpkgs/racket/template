# Template file for 'racket'
pkgname=racket
version=6.2
revision=2
build_style=gnu-configure
build_wrksrc=src
hostmakedepends="gsfonts sqlite"
makedepends="sqlite-devel gtk+-devel"
depends="sqlite gtk+"
short_desc="A programmable programming language"
maintainer="Andrea Brancaleoni <miwaxe@gmail.com>"
license="LGPL-3"
homepage="http://racket-lang.org/"
distfiles="http://mirror.racket-lang.org/installers/$version/$pkgname-$version-src.tgz"
checksum=1331113742b3b3c26b5b95242c714379f1e5f325fad824bb28eeb7b4be03e615
build_pie=yes
nostrip=yes

if [ "$CROSS_BUILD" ]; then
	configure_args+=" --enable-racket=/usr/bin/racket"
	hostmakedepends+=" racket"
fi

post_install() {
	vlicense COPYING-libscheme.txt
}

racket-docs_package() {
	noarch=yes
	short_desc+=" - docs files"
	pkg_install() {
		vmove usr/share/doc
	}
}
