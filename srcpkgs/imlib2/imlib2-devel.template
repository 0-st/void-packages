	mv ${SRCPKGDESTDIR}/usr/lib/imlib2/loaders/*.a \
		${DESTDIR}/usr/lib/imlib2/loaders
	mv ${SRCPKGDESTDIR}/usr/lib/imlib2/filters/*.a \
		${DESTDIR}/usr/lib/imlib2/filters
	mv ${SRCPKGDESTDIR}/usr/share ${DESTDIR}/usr
}
