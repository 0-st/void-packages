revision=1
build_wrksrc=src
hostmakedepends="bison flex"
makedepends="jack-devel libsndfile-devel liblo-devel"
short_desc="Concurrent, on-the-fly audio programming language"
maintainer="Andrea Brancaleoni <miwaxe@gmail.com>"
