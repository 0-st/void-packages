# Template build file for 'libXi'.
pkgname=libXi
version=1.6.2
revision=2
build_style=gnu-configure
hostmakedepends="pkg-config xmlto"
makedepends="inputproto>=2.2 libXext-devel"
short_desc="X Input extension library"
maintainer="Juan RP <xtraeme@gmail.com>"
license="MIT"
homepage="${XORG_SITE}"
distfiles="${XORG_SITE}/lib/$pkgname-$version.tar.bz2"
checksum=3250fd34cdd099a15b78abdb87c7e1a9b7a2188ab893f273e90d831dbc604058

libXi-devel_package() {
	depends="inputproto libX11-devel libXext-devel libXi>=${version}"
	short_desc="${short_desc} -- development files"
	pkg_install() {
		vmove usr/include
		vmove usr/share
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
	}
}

libXi_package() {
	pkg_install() {
		vmove usr
	}
}
