		/etc/pekwm/autoproperties
		/etc/pekwm/mouse_system
		/etc/pekwm/mouse_sloppy
		/etc/pekwm/mouse_click
		/etc/pekwm/config_system"
	pkg_install() {
		vmove all
	}
}
