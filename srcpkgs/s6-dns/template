# Template file for 's6-dns'
pkgname=s6-dns
version=2.0.0.6
revision=1
build_pie=yes
build_style=gnu-configure
makedepends="execline-devel skalibs-devel"
configure_args="--libdir=/usr/lib"
short_desc="Suite of DNS client programs and libraries for Unix systems"
maintainer="lemmi <lemmi@nerd2nerd.org>"
license="ISC"
homepage="http://skarnet.org/software/${pkgname}/"
distfiles="http://skarnet.org/software/${pkgname}/${pkgname}-${version}.tar.gz"
checksum=dc63c9247bd18984de1197798533a01bc16e250fa8de11037481fd82831fede8

post_install() {
	vlicense COPYING
	vdoc README
	vcopy "doc/*" usr/share/doc/${pkgname}
}

s6-dns-doc_package() {
	noarch=yes
	short_desc+=" - documentation"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/share/doc
	}
}
s6-dns-devel_package() {
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
	}
}
