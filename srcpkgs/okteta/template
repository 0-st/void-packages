# Template file for 'okteta'
pkgname=okteta
version=4.14.2
revision=1
short_desc="Hexadecimal editor for binary files"
maintainer="Norbert Vegh <vegh@norvegh.com>"
license="GPL-2+"
homepage="https://utils.kde.org/projects/okteta/"
distfiles="http://download.kde.org/stable/4.14.2/src/okteta-4.14.2.tar.xz"
checksum=6ee2f8e8abfab935420f8bb09b08e406965748bc02ad73646d5bc08c06473742
build_style=cmake
configure_args="-Wno-dev -DKDE4_BUILD_TESTS=OFF -DSYSCONF_INSTALL_DIR=/etc"
hostmakedepends="cmake automoc4"
makedepends="kdelibs-devel qt-devel phonon-devel"

okteta-devel_package() {
		depends="${sourcepkg}>=${version}_${revision}"
		short_desc="Hexadecimal editor for binary files - development files"
		pkg_install() {
				vmove usr/include
				vmove "usr/lib/*.so"
		}
}
