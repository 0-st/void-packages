maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="GPL-2, Freeware"
checksum=dac3f12c77e788ac467f470b05a8a81656b23f3c95e09dc6aacb321498855b5c

do_install() {
	vinstall unifont-${version}.bdf 644 usr/share/fonts/misc unifont.bdf
}
