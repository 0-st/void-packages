provides="xbps-static-9999"
replaces="xbps-static>=0"

do_install()
{
	mkdir -p ${DESTDIR}/sbin ${DESTDIR}/usr/lib
	mv ${SRCPKGDESTDIR}/usr/include ${DESTDIR}/usr
