# Template file for 'glances'
pkgname=glances
version=2.0
revision=2
noarch="yes"
build_style="python-module"
pycompile_module="glances"
hostmakedepends="python-devel python-setuptools python-psutil"
makedepends="${hostmakedepends}"
depends="${makedepends/python-devel/}"
