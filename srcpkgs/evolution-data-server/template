pre_configure()
{
	# Fix up pkgconfig file!
	sed -i -e "s|@mozilla_nss@|mozilla-nss|g" \
	    -e "s|@mozilla_nspr@|mozilla-nspr|g" \
		${wrksrc}/evolution-data-server.pc.in
}

