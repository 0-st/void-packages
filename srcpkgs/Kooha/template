post_patch() {
	if [ "$CROSS_BUILD" ]; then
		vsed -i build-aux/cargo.sh \
			-e 's%"$CARGO_TARGET_DIR"/%&${RUST_TARGET}/%' \
			-e '/CARGO_HOME/d'
	fi
}
