# Template file for 'shorewall'
pkgname=shorewall
version=4.5.21.9
revision=1
_disturl="http://www.shorewall.net/pub/${pkgname}/4.5/${pkgname}-4.5.21"
distfiles="
 ${_disturl}/${pkgname}-${version}.tar.bz2
 ${_disturl}/${pkgname}6-${version}.tar.bz2
 ${_disturl}/${pkgname}-core-${version}.tar.bz2"
checksum="
