	short_desc="thunderbird pt-PT language pack"
	noarch=yes
	pkg_install() {
		vinstall ${XBPS_SRCDISTDIR}/${sourcepkg}-${version}/pt-PT.xpi 644 \
			usr/lib/thunderbird/browser/extensions langpack-pt-PT@thunderbird.mozilla.org.xpi
	}
}

