thunderbird-i18n_package() {
	depends="thunderbird>=${version}"
	for f in ${_LANG_PACKS}; do
		depends+=" thunderbird-i18n-${f}>=${version}"
	done
	noarch=yes
	pkg_install() {
		vmkdir usr
	}
}
