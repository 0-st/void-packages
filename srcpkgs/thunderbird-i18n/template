thunderbird-i18n-ar_package() {
	depends="thunderbird>=${version}"
	replaces="thunderbird-i18n<${version}"
	short_desc="thunderbird ar language pack"
	noarch=yes
	pkg_install() {
		vinstall ${XBPS_SRCDISTDIR}/${sourcepkg}-${version}/ar.xpi 644 \
			usr/lib/thunderbird/browser/extensions langpack-ar@thunderbird.mozilla.org.xpi
	}
}

