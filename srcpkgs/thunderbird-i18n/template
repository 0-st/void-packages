# Template file for 'thunderbird-i18n'
pkgname=thunderbird-i18n
version=24.6.0
revision=1
homepage="http://www.mozilla.com/"
short_desc="Thunderbird language packs"
maintainer="Ypnose <linuxienATlegtuxDOTorg>"
license="MPL-2.1"

noarch=yes
create_wrksrc=yes

do_extract() {
	:
}

do_install() {
	:
}

