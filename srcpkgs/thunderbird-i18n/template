do_install() {
	for f in ${_LANG_PACKS}; do
		vinstall ${XBPS_SRCDISTDIR}/${pkgname}-${version}/$f.xpi 644 \
			usr/lib/thunderbird/extensions langpack-${f}@thunderbird.mozilla.org.xpi
	done
}

thunderbird-i18n_package() {
	depends="thunderbird"
	noarch=yes
	pkg_install() {
		vmove all
	}
}
