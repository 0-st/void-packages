# Template file for 'xfce4-settings'
pkgname=xfce4-settings
version=4.6.4
revision=1
distfiles="http://archive.xfce.org/src/xfce/$pkgname/4.6/$pkgname-$version.tar.bz2"
build_style=gnu_configure
configure_args="--localstatedir=/var --enable-libxklavier
 --enable-sound-settings --enable-pluggable-dialogs"
short_desc="Xfce settings manager"
maintainer="Juan RP <xtraeme@gmail.com>"
checksum=a5e3f0d959b0d424355414769250473785043c3977446a73b36fa3a5ce44ecdb
long_desc="
 xfce4-settings is the settings manager for the Xfce desktop environment."

conf_files="/etc/xdg/xfce4/xfconf/xfce-perchannel-xml/xsettings.xml"

Add_dependency run glibc
Add_dependency run libglade
Add_dependency run gtk+
Add_dependency run libxfce4util
Add_dependency run xfconf
Add_dependency run glib
Add_dependency run libXi
Add_dependency run libXcursor
Add_dependency run libX11
Add_dependency run libXrandr
Add_dependency run libxklavier
Add_dependency run libxfcegui4
Add_dependency run exo
Add_dependency run libnotify
Add_dependency run dbus-glib
Add_dependency run libwnck
Add_dependency run cairo
Add_dependency run pango
Add_dependency build pkg-config
Add_dependency build intltool
Add_dependency build libglade-devel
Add_dependency build gtk+-devel
Add_dependency build libxfce4util-devel
Add_dependency build xfconf-devel
Add_dependency build glib-devel
Add_dependency build libXi-devel
Add_dependency build libXcursor-devel
Add_dependency build libX11-devel
Add_dependency build libXrandr-devel
Add_dependency build libxklavier-devel
Add_dependency build libxfcegui4-devel
Add_dependency build exo-devel
Add_dependency build libnotify-devel
Add_dependency build dbus-glib-devel
Add_dependency build libwnck-devel
Add_dependency build cairo-devel
Add_dependency build pango-devel
Add_dependency full hicolor-icon-theme
Add_dependency full desktop-file-utils

post_install()
{
	# Change default icon them to tango, until xfce4-icon-theme
	# is updated for >=4.6.
	sed -i -e "s|Rodent|Tango|" ${DESTDIR}${conf_files}
}
