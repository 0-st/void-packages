# Template file for 'libnftnl'
pkgname=libnftnl
version=1.0.4
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="libmnl-devel"
short_desc="Low-level netlink interface to nf_tables"
maintainer="Christian Neukirchen <chneukirchen@gmail.com>"
license="GPL-2"
homepage="http://www.netfilter.org/projects/libnftnl/"
distfiles="http://www.netfilter.org/projects/${pkgname}/files/${pkgname}-${version}.tar.bz2"
checksum=8f1fbf9bcf87bf68e782f464fb05428d476c2e9a0bec91c6cda7a389a21969d0

libnftnl-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" -- development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
