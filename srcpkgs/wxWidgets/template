# Template file for 'wxWidgets'

pkgname="wxWidgets"
version="2.8.12"
revision=1
build_style=gnu-configure
short_desc="Cross-Platform Gui Library"
maintainer="Martin Riese <grauehaare@gmx.de>"
license="wxWindows Library Licence"
homepage="http://www.wxwidgets.org/"
makedepends="pkg-config gtk+-devel libjpeg-turbo-devel tiff-devel libSM-devel libXinerama-devel libmspack"
distfiles="http://downloads.sourceforge.net/project/wxwindows/${version}/wxWidgets-${version}.tar.bz2"
checksum="3b0ac1d2d017683851841501c8e1b744b97242d684a1668ded61809b0504f707"

wxWidgets-devel_package() {
        depends="wxWidgets>=${version}_${revision}"
        short_desc+=" - development files"
        pkg_install() {
		vmove usr/include
                vmove "usr/lib/*.so"
		vmove usr/share
        }
}
