# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# Source again stuff in /etc/profile.d in case it hasn't been.
for i in /etc/profile.d/*.sh ; do
	if [ -r "$i" ]; then
		if [ "$PS1" ]; then
			. $i
		else
			. $i >/dev/null 2>&1
		fi
	fi
done

# User specific aliases and functions
