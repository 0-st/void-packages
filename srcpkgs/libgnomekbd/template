# Template file for 'libgnomekbd'
pkgname=libgnomekbd
version=3.4.0.2
revision=3
distfiles="${GNOME_SITE}/$pkgname/3.4/$pkgname-$version.tar.xz"
build_style=gnu-configure
configure_args="--disable-static"
short_desc="Gnome keyboard configuration library"
maintainer="Juan RP <xtraeme@gmail.com>"
checksum=6e6c8956adbd39f1c3a8ec5c77bcf7ffbdaa54320398015d1174cd5003664e39
long_desc="
 This packages a keyboard configuration library for the GNOME desktop."

subpackages="$pkgname-devel"

Add_dependency run desktop-file-utils

Add_dependency build pkg-config
Add_dependency build intltool
Add_dependency build libxml2-devel
Add_dependency build gtk+3-devel
Add_dependency build libxklavier-devel ">=5.2.1_1"
Add_dependency build gobject-introspection
