#!/bin/sh

PREREQ=""

prereqs()
{
	echo "$PREREQ"
}

case $1 in
# get pre-requisites
prereqs)
	prereqs
	exit 0
	;;
esac

. ${ROOTDIR}/usr/share/initramfs-tools/hook-functions
copy_exec ${ROOTDIR}/bin/busybox
# Create required busybox symlinks
for f in $(/bin/busybox --list); do
	[ "$f" = "modprobe" ] && continue
	ln -sf /bin/busybox ${DESTDIR}/bin/${f}
done

exit 0
