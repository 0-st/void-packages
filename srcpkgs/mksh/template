# Template file for 'mksh'
pkgname=mksh
version=R48
revision=1
short_desc="The MirBSD Korn Shell"
maintainer="pancake <xtraeme@gmail.com>"
homepage="https://www.mirbsd.org/mksh.htm"
license="BSD"
distfiles="http://pub.allbsd.org/MirOS/dist/mir/mksh/$pkgname-$version.tgz"
checksum=56f6578073a669e33ced5364e0939ed6ccdb32db054489d4070afbefa36d2c73
wrksrc=mksh

do_build() {
	sh ./Build.sh
}

do_install() {
	vinstall mksh 755 usr/bin
	vinstall mksh.1 644 usr/share/man/man1
}

mksh_package() {
	register_shell="/bin/mksh"
	pkg_install() {
		vmove usr
	}
}
