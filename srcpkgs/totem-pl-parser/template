# Template file for 'totem-pl-parser'
pkgname=totem-pl-parser
version=2.32.4
distfiles="${GNOME_SITE}/$pkgname/2.32/$pkgname-$version.tar.bz2"
build_style=gnu_configure
configure_args="--localstatedir=/var"
short_desc="Totem playlist parser library"
maintainer="Juan RP <xtraeme@gmail.com>"
checksum=349006c8c26a7bee6775c2f48cb158be15c92608f444598c67ca820c205213d6
long_desc="
 $pkgname is a simple GObject-based library to parse a host of
 playlist formats, as well as save those."

subpackages="$pkgname-devel"

Add_dependency run glibc
Add_dependency run glib
Add_dependency run gmime
Add_dependency run libxml2
Add_dependency run libsoup
Add_dependency run libsoup-gnome

Add_dependency build pkg-config
Add_dependency build intltool
Add_dependency build libxml2-devel
Add_dependency build libsoup-gnome-devel
Add_dependency build libsoup-devel
Add_dependency build glib-devel
Add_dependency build gmime-devel

