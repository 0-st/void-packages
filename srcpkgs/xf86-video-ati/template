# Template build file for 'xf86-video-ati'.
pkgname=xf86-video-ati
version=6.13.0
distfiles="${XORG_SITE}/driver/$pkgname-$version.tar.bz2"
build_style=gnu_configure
short_desc="Xorg ATI Radeon video driver"
