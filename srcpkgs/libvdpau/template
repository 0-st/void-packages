license="MIT"
distfiles="http://people.freedesktop.org/~aplattner/vdpau/${pkgname}-${version}.tar.gz"
checksum=9b55beec9d8b01bbf89229b7d075ceee870f4e1830523c11f29a46c07fe72d75

post_install() {
	vinstall COPYING 644 usr/share/licenses/${pkgname}
}
