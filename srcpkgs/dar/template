# Template file for 'dar'
pkgname=dar
version=2.4.17
revision=1
build_style=gnu-configure
configure_args="--disable-upx --disable-build-html"
conf_files="/etc/darrc"
makedepends="acl-devel zlib-devel bzip2-devel lzo-devel libgcrypt-devel e2fsprogs-devel"
short_desc="Shell command that backs up directory trees and files"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="GPL-2"
homepage="http://dar.linux.free.fr/"
distfiles="${SOURCEFORGE_SITE}/dar/dar-${version}.tar.gz"
checksum=5d861c39698b77124680914741e1e40e7e9bedb3fcedc6df8d468e619479833c

libdar_package() {
	short_desc+=" - runtime library"
	pkg_install() {
		vmove usr/lib/*.so.*
	}
}
libdar-devel_package() {
	short_desc+=" - development files"
	depends="libdar>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
	}
}
