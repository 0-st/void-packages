post_install() {
	vlicense LICENSE
}

zathura-devel_package() {
	depends="girara-devel cairo-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
	}
}
