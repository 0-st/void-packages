# Template file for 'btrfs-progs'
pkgname=btrfs-progs
version=4.4
revision=1
wrksrc=${pkgname}-v${version}
build_style=gnu-configure
configure_args="--disable-backtrace"
hostmakedepends="automake libtool pkg-config asciidoc xmlto"
makedepends="zlib-devel lzo-devel acl-devel libuuid-devel e2fsprogs-devel"
short_desc="Btrfs filesystem utilities"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="GPL-2"
homepage="http://btrfs.wiki.kernel.org/"
distfiles="${KERNEL_SITE}/kernel/people/kdave/${pkgname}/${pkgname}-v${version}.tar.xz"
checksum=779c7c7f1dc8800b61d6dd21e296474a5ded5360a8dc598f93825ba27dd85a4b

pre_configure() {
	NOCONFIGURE=1 ./autogen.sh
}

libbtrfs_package() {
	short_desc+=" - runtime library"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}
libbtrfs-devel_package() {
	short_desc+=" - development files"
	depends="libbtrfs>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
