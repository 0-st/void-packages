# Template file for 'libssh'
pkgname=libssh
version=0.6.5
revision=1
build_style=cmake
hostmakedepends="cmake pkg-config"
makedepends="zlib-devel libressl-devel"
short_desc="Multiplatform C library implementing the SSH v2 protocol"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="LGPL-2.1"
homepage="http://www.libssh.org/"
distfiles="http://git.libssh.org/projects/libssh.git/snapshot/${pkgname}-${version}.tar.bz2"
checksum=6eb1013453ebb15c4f3d82294e597bc04173dedfc0521545240fcd3b07d0cca2

libssh-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
		vmove usr/lib/cmake
	}
}
