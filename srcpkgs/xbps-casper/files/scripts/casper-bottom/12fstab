#!/bin/sh

PREREQ=""
DESCRIPTION="Setting up /etc/fstab"
FSTAB=${rootmnt}/etc/fstab

[ -r /scripts/functions ] && . /scripts/functions

prereqs()
{
       echo "$PREREQ"
}

case $1 in
# get pre-requisites
prereqs)
       prereqs
       exit 0
       ;;
esac

log_begin_msg "$DESCRIPTION"

cat > $FSTAB <<EOF
${UNIONFS} / ${UNIONFS} rw 0 0
EOF

log_end_msg
