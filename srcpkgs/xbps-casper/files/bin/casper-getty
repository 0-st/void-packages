#! /bin/sh

autologin=1
for opt in "$@" ; do
        if [ "$opt" = "-l" -o "$opt" = "-n" ] ; then
                autologin=0
        fi
done

if [ -x /sbin/agetty ]; then
	mygetty=/sbin/agetty
elif [ -x /sbin/getty ]; then
	mygetty=/sbin/getty
fi

if [ "$autologin" = "1" ] ; then
         exec ${mygetty} -n -l /sbin/casper-login $*
else
         exec ${mygetty} $*
fi

