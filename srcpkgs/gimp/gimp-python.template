do_install()
{
	mkdir -p ${DESTDIR}/usr/lib/gimp/2.0/plug-ins

	mv ${SRCPKGDESTDIR}/usr/lib/gimp/2.0/python \
		${DESTDIR}/usr/lib/gimp/2.0
