gcc-c++_package() {
	lib32disabled=yes
	depends="gcc>=${_majorver} libstdc++-devel>=${_majorver}"
	short_desc+=" - C++ support"
	pkg_install() {
		for f in g++ c++ ${_triplet}-g++ ${_triplet}-c++; do
			vmove usr/bin/${f}
		done
		vmove usr/lib/gcc/${_triplet}/${_majorver}/cc1plus
		vmove usr/share/man/man1/g++.1
	}
}
