# Template file for 'libevdev'
pkgname=libevdev
version=1.2.2
revision=1
build_style=gnu-configure
configure_args="--disable-gcov"
hostmakedepends="python"
short_desc="Wrapper library for evdev devices"
maintainer="Juan RP <xtraeme@gmail.com>"
license="MIT"
homepage="http://www.freedesktop.org/wiki/Software/libevdev/"
distfiles="http://freedesktop.org/software/$pkgname/$pkgname-$version.tar.xz"
checksum=860e9a1d5594393ff1f711cdeaf048efe354992019068408abbcfa4914ad6709

libevdev-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
		vmove usr/share/man/man3
	}
}
