version=3.14.3
revision=1
lib32disabled=yes
build_style=gnu-configure
hostmakedepends="pkg-config intltool gnome-doc-utils itstool gobject-introspection"
makedepends="
 gnome-desktop-devel>=3.14 libpeas-devel>=1.9 lcms2-devel exempi-devel
 libexif-devel librsvg-devel gnome-icon-theme shared-mime-info"
depends="hicolor-icon-theme desktop-file-utils gnome-icon-theme shared-mime-info"
short_desc="Eye of GNOME graphics viewer program"
maintainer="Juan RP <xtraeme@gmail.com>"
