eog-devel_package() {
	depends="gtk+3-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/gtk-doc
		vmove usr/share/eog/gir-1.0
	}
}
