# Template build file for 'libXext'.
pkgname=libXext
version=1.1.1
revision=1
distfiles="${XORG_SITE}/lib/$pkgname-$version.tar.bz2"
build_style=gnu_configure
short_desc="X Extension library"
maintainer="Juan RP <xtraeme@gmail.com>"
