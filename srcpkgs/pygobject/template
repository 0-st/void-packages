# Template file for 'pygobject'
pkgname=pygobject
version=2.20.0
revision=2
distfiles="${GNOME_SITE}/$pkgname/2.20/$pkgname-$version.tar.bz2"
build_style=gnu_configure
short_desc="Python bindings for GObject"
maintainer="Juan RP <xtraeme@gmail.com>"
