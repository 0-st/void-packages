# Template file for 'pygobject'
pkgname=pygobject
version=2.28.3
distfiles="${GNOME_SITE}/$pkgname/2.28/$pkgname-$version.tar.bz2"
build_style=gnu_configure
short_desc="Python bindings for GObject"
