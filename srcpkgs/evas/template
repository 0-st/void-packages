# Template file for 'evas'
pkgname=evas
version=1.7.6.1
revision=2
makedepends="pkg-config giflib-devel libpng-devel libjpeg-turbo-devel fontconfig-devel
 tiff-devel fribidi-devel harfbuzz-devel eet-devel pixman-devel
 xcb-util-image-devel MesaLib-devel"
build_style=gnu-configure
configure_args="--disable-static --enable-gl-xcb --enable-pthreads
 --enable-async-events --enable-pixman  --enable-pixman-font
 --enable-pixman-rect --enable-pixman-line --enable-pixman-poly
 --enable-pixman-image --enable-pixman-image-scale-sample
 --disable-install-examples"
homepage="http://enlightenment.org"
short_desc="A hardware-accelerated canvas API"
maintainer="Juan RP <xtraeme@gmail.com>"
license="BSD"
distfiles="http://download.enlightenment.org/releases/evas-${version}.tar.gz"
checksum=ebfd6d178999128855c65b8edeeec5cc1f1b2acbdd1d8aac197a268764bdeacc

evas-devel_package() {
	depends="eet-devel pixman-devel fribidi-devel harfbuzz-devel
		fontconfig-devel evas>=${version}"
	short_desc+=" -- development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
	}
}

evas_package() {
	pkg_install() {
		vmove all
	}
}
