# Template file for 'gmime'
pkgname=gmime
version=2.4.21
distfiles="${GNOME_SITE}/$pkgname/2.4/$pkgname-$version.tar.bz2"
build_style=gnu_configure
configure_args="--localstatedir=/var --disable-mono"
short_desc="GNOME Core mime parsing library"
maintainer="Juan RP <xtraeme@gmail.com>"
checksum=c183bfbd20c4da5e93c24775ff7d6caf836646b43936e15f4f4810eda5181ab5
long_desc="
 This package provides an implementation of the Desktop Menu Specification
 for the GNOME Desktop."

subpackages="$pkgname-devel"

Add_dependency run glibc
Add_dependency run glib
Add_dependency run zlib

Add_dependency build pkg-config
Add_dependency build intltool
Add_dependency build glib-devel
Add_dependency build zlib-devel

post_install()
{
	for f in uuen uude; do
		mv ${DESTDIR}/usr/bin/${f}code ${DESTDIR}/usr/bin/g${f}code
	done
}
