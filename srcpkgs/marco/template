# Template file for 'marco'
pkgname=marco
version=1.11.0
revision=1
build_pie=yes
build_style=gnu-configure
configure_args="--disable-static --with-gtk=2.0 --enable-startup-notification --disable-schemas-compile"
hostmakedepends="automake libtool pkg-config gettext-devel intltool itstool
 glib-devel gdk-pixbuf-devel yelp-tools zenity"
makedepends="gtk+-devel libnotify-devel libgtop-devel libSM-devel
 libXt-devel libXcomposite-devel mate-desktop-devel libcanberra-devel
 startup-notification-devel"
depends="zenity"
short_desc="A window manager for MATE"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="LGPL-2"
homepage="http://mate-desktop.org"
distfiles="http://pub.mate-desktop.org/releases/${version%.*}/${pkgname}-${version}.tar.xz"
checksum=80626bef5c42bbc3b9d946554165197dc78d681e469c147fc5ef8dc0f5b2ca75

pre_configure() {
	autoreconf -if
}

libmarco_package() {
	short_desc+=" - runtime library"
	pkg_install() {
		vmove usr/lib/*.so.*
	}
}
libmarco-devel_package() {
	short_desc+=" - development files"
	depends="libmarco>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
	}
}
