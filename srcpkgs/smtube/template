# Template file for 'smtube'
pkgname=smtube
version=15.1.0
revision=1
makedepends="zlib-devel qt5-script-devel qt5-tools-devel"
depends="hicolor-icon-theme desktop-file-utils"
short_desc="A small youtube browser"
maintainer="Juan RP <xtraeme@gmail.com>"
license="GPL-2"
homepage="http://smplayer.sourceforge.net/"
distfiles="${SOURCEFORGE_SITE}/$pkgname/$pkgname-$version.tar.bz2"
checksum=4e790c023ed845437ef43b4b8289de13788758c3b2810d2d45187217a4530751

do_build() {
	make PREFIX=/usr ${makejobs}
}
do_install() {
	make PREFIX=/usr DESTDIR=${DESTDIR} install
}
