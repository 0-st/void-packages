short_desc="Python development files"
long_desc="${long_desc}

 This package contains files for development, headers, static libs, etc."

revision=2

Add_dependency run libffi-devel
Add_dependency run zlib-devel
Add_dependency run readline-devel
Add_dependency run bzip2-devel
Add_dependency run gdbm-devel
Add_dependency run openssl-devel
Add_dependency run expat-devel
Add_dependency run db-devel
Add_dependency run ncurses-devel
Add_dependency run sqlite-devel
Add_dependency run python

do_install()
{
	vmkdir usr/include/python2.7
	vmove "usr/bin/python*-config" usr/bin
	vmove usr/lib/pkgconfig usr/lib
	mv ${SRCPKGDESTDIR}/usr/include/python2.7/* \
		${DESTDIR}/usr/include/python2.7
	mv ${DESTDIR}/usr/include/python2.7/pyconfig.h \
		${SRCPKGDESTDIR}/usr/include/python2.7
}
