# Template file for 'clutter-gtk'
pkgname=clutter-gtk
version=1.1.2
distfiles="${GNOME_SITE}/$pkgname/1.1/$pkgname-$version.tar.xz"
build_style=gnu-configure
short_desc="GTK+3 bindings for the Clutter Tolkit"
maintainer="Juan RP <xtraeme@gmail.com>"
