case "${ACTION}" in
post)
	echo "============================================================"
	echo "To use VirtualBox the following modules should be loaded:"
	echo "  vboxdrv, vboxnetadp, vboxnetflt"
	echo
	echo "You can load them at boot in /etc/conf.d/modules, like:"
	echo "  modules=\"vboxdrv vboxnetadp vboxnetflt\""
	echo "============================================================"
	;;
esac
