# Template file for 'h2o'
pkgname=h2o
version=1.0.0
revision=1
build_style=cmake
conf_files="/etc/h2o.conf"
system_accounts="h2o"
make_dirs="/var/log/h2o 0750 root root"
hostmakedepends="cmake"
makedepends="libressl-devel>=2.1.3 libyaml-devel"
depends="perl"
