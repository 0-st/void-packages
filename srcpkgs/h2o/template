distfiles="${homepage}/archive/v${version}.tar.gz"
checksum=01a32a51edfea24526a0d0df085c66867706e41dd07073f777d6fbaa8d15a62d

post_install() {
	vsv h2o
	vconf ${FILESDIR}/h2o.conf
	vlicense LICENSE
}
