libxdg-basedir-devel_package() {
	depends="libxdg-basedir>=${version}"
	short_desc+=" -- development files"
	pkg_install() {
        	vmove usr/include
        	vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
	}
}
