# Template file for 'mx'
pkgname=mx
version=1.4.6
revision=2
build_style=gnu-configure
hostmakedepends="pkg-config intltool gobject-introspection"
makedepends="libXrandr-devel gtk+-devel dbus-glib-devel clutter-devel startup-notification-devel"
short_desc="A widget toolkit using Clutter"
maintainer="Juan RP <xtraeme@gmail.com>"
homepage="http://www.clutter-project.org"
license="LGPL-2.1"
distfiles="http://pkgs.fedoraproject.org/repo/pkgs/libmx/mx-${version}.tar.xz/92ec1bb29cc878932857de737b111827/mx-${version}.tar.xz"
checksum=20fd8e1463d84c791c20dd1e021bc18041b05ad095a1acbaace7bf0dd43d09f2
long_desc="
 Clutter is an open source software library for creating fast, visually
 rich and animated graphical user interfaces.

 This package provides mx, a widget toolkit that uses Clutter."

mx-devel_package() {
	depends="gtk+-devel clutter-devel mx>=$version"
	short_desc="${short_desc} - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/gir-1.0
		vmove usr/share/gtk-doc
	}
}

mx_package() {
	pkg_install() {
		vmove usr
	}
}
