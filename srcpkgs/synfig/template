# Template file for 'synfig'
pkgname=synfig
version=1.0.1
revision=1
build_style=gnu-configure
hostmakedepends="ETL pkg-config"
makedepends="zlib-devel glibmm-devel libxml++-devel cairo-devel pango-devel
 mlt-devel boost-devel boost-build libmng-devel libjpeg-turbo-devel"
nocross=yes
short_desc="A free, Open Source 2D vector and timeline-based animation software"
maintainer="Diogo Leal <diogo@diogoleal.com>"
license="GPL-3"
homepage="http://www.synfig.org/"
distfiles="http://download.tuxfamily.org/synfig/releases/${version}/synfig-${version}.tar.gz"
checksum=2386ebfdfbd68f46c25e9011928cbece525ce4c19a6367c81343b75f79172e50

synfig-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.so
		vmove usr/lib/synfig/modules/*.so
	}
}

