do_install() {
	for f in ${_LANG_PACKS}; do

		vinstall ${XBPS_SRCDISTDIR}/${pkgname}-${version}/$f.xpi 644 \
			usr/lib/firefox/extensions langpack-${f}@firefox.mozilla.org.xpi
	done
}
