do_install() {
	for f in ${_LANG_PACKS}; do
		vinstall ${XBPS_SRCDISTDIR}/${pkgname}-${version}/$f.xpi 644 \
			usr/lib/firefox/browser/extensions langpack-${f}@firefox.mozilla.org.xpi
	done
}

firefox-i18n_package() {
	depends="firefox"
	noarch=yes
	pkg_install() {
		vmove all
	}
}
