case "${ACTION}" in
pre)
	# Remove old triggers and create compat symlink.
	if [ ! -d var/db/xbps ]; then
		mkdir -p var/db/xbps
	else
		rm -rf var/db/xbps/triggers
	fi
	[ ! -d usr/libexec/${PKGNAME} ] && mkdir -p usr/libexec/${PKGNAME}
	cd var/db/xbps && ln -sf ../../../usr/libexec/${PKGNAME} triggers
	;;
esac
