# Template file for 'profile-sync-daemon'
pkgname=profile-sync-daemon
version=5.65
revision=1
noarch="yes"
conf_files="/etc/psd.conf"
depends="rsync"
short_desc="Syncs browser profiles to tmpfs"
maintainer="graysky <graysky AT archlinux DOT us>"
