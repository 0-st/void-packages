build_options="systemd"
build_style="gnu-makefile"
make_install_target=$(vopt_if systemd 'install-systemd-all' 'install-bin install-man')

do_build() {
	:
}

post_install() {
	[ "$build_option_systemd" ] || vsv psd
}
