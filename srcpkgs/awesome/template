# Template file for 'awesome'
pkgname=awesome
version=3.4.10
build_style=cmake
homepage="http://awesome.naquadah.org"
distfiles="${homepage}/download/${pkgname}-${version}.tar.xz"
short_desc="Highly configurable, next gen framework window manager for X."
maintainer="davehome <davehome@redthumb.info.tm>"
license="GPL-2"
checksum=709fd64da46b59be649fb48a70a464629ec2186b5ab31b4595cffc7d46c4e2ae
long_desc="
 awesome is a highly configurable, next generation framework window manager
 for X. It is very fast, extensible and licensed under the GNU GPLv2
 license.

 It is primarly targeted at power users, developers and any people dealing
 with every day computing tasks and who want to have fine-grained control on
 theirs graphical environment."

conf_files="/etc/xdg/awesome/rc.lua"

Add_dependency run glibc
Add_dependency run libxcb
Add_dependency run libX11
Add_dependency run pango
Add_dependency run glib
Add_dependency run xcb-util
Add_dependency run startup-notification
Add_dependency run imlib2
Add_dependency run libxdg-basedir
Add_dependency run libev
Add_dependency run lua
Add_dependency run dbus-libs

Add_dependency build libxcb-devel
Add_dependency build libX11-devel
Add_dependency build pango-devel
Add_dependency build glib-devel
Add_dependency build xcb-util-devel
Add_dependency build startup-notification-devel
Add_dependency build imlib2-devel
Add_dependency build libxdg-basedir-devel
Add_dependency build libev-devel
Add_dependency build lua-devel
Add_dependency build dbus-devel

post_install()
{
	vmkdir etc/xdg
	mv ${DESTDIR}/usr/etc/xdg/awesome ${DESTDIR}/etc/xdg
	rm -rf ${DESTDIR}/usr/etc
}
