#!/bin/sh

# Read system defaults.
if [ -r /etc/updatedb.conf ]; then
	. /etc/updatedb.conf
fi

if [ -n "$PRUNEFS" ]; then
	args="$args --prunefs='$PRUNEFS'"
fi

if [ -n "$PRUNEPATHS" ]; then
	args="$args --prunepaths='$PRUNEPATHS'"
fi

# Update the "locate" database
if [ -x /usr/bin/updatedb ]; then
    /usr/bin/updatedb ${args}
fi
