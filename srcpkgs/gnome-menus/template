# Template file for 'gnome-menus'
pkgname=gnome-menus
version=2.91.6
distfiles="${GNOME_SITE}/$pkgname/2.91/$pkgname-$version.tar.bz2"
build_style=gnu_configure
configure_args="--localstatedir=/var --disable-static"
short_desc="GNOME menu specifications"
