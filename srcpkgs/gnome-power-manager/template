post_install()
{
	install -d ${DESTDIR}/usr/share/gconf/schemas
	mv ${DESTDIR}/etc/gconf/schemas/* ${DESTDIR}/usr/share/gconf/schemas
	rm -rf ${DESTDIR}/etc/gconf
}
