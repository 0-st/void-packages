	mv ${SRCPKGDESTDIR}/usr/share/doc ${DESTDIR}/usr/share
	mv ${SRCPKGDESTDIR}/usr/bin/libwmf-config ${DESTDIR}/usr/bin
	mv ${SRCPKGDESTDIR}/usr/lib/gtk-2.0/${gtk_abiver}/loaders/*.*a \
		${DESTDIR}/usr/lib/gtk-2.0/${gtk_abiver}/loaders
}
