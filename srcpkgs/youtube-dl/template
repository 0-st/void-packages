# Template file for 'youtube-dl'
pkgname=youtube-dl
version=2013.07.10
revision=1
makedepends="python"
short_desc="Tool to download youtube videos"
maintainer="pancake <pancake@nopcode.org>"
license="Public Domain"
homepage="http://rg3.github.com/youtube-dl/"
distfiles="http://youtube-dl.org/downloads/$version/$pkgname"
checksum=8030d2db061e8fb8dc99f5448491cdb52857a7a5ca1a090f324b53f053473daf

noextract=yes
noarch=yes
create_srcdir=yes

do_install() {
	vinstall ${XBPS_SRCDISTDIR}/${pkgname}-${version}/youtube-dl 755 usr/bin
}

youtube-dl_package() {
	noarch="yes"
	depends="python"
	pkg_install() {
		vmove usr
	}
}
