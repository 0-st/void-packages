# Template file for 'youtube-dl'
pkgname=youtube-dl
version=2013.08.09
revision=1
makedepends="python"
short_desc="Tool to download youtube videos"
maintainer="pancake <pancake@nopcode.org>"
license="Public Domain"
homepage="http://rg3.github.com/youtube-dl/"
distfiles="http://youtube-dl.org/downloads/$version/$pkgname"
checksum="6844d73d33b517fb9a2dc381f59868ad7952edea9104c73a1199e93f105a4bed"
noextract=yes
noarch=yes
create_srcdir=yes

do_install() {
	vinstall ${XBPS_SRCDISTDIR}/${pkgname}-${version}/youtube-dl 755 usr/bin
}

youtube-dl_package() {
	noarch="yes"
	depends="python"
	pkg_install() {
		vmove usr
	}
}
