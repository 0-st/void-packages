# Template file for 'libevent'
pkgname=libevent
version=2.0.21
revision=6
wrksrc="$pkgname-$version-stable"
build_style=gnu-configure
makedepends="libressl-devel>=2.1.2"
short_desc="Abstract asynchronous event notification library"
maintainer="Juan RP <xtraeme@gmail.com>"
homepage="http://www.monkey.org/~provos/libevent/"
license="GPL-2"
distfiles="${SOURCEFORGE_SITE}/levent/$pkgname-$version-stable.tar.gz"
checksum=22a530a8a5ba1cb9c080cba033206b17dacd21437762155c6d30ee6469f574f5

libevent-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/bin
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/*.a
		vmove usr/lib/*.so
	}
}
