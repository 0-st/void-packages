# Template file for 'vamp-plugin-sdk'
pkgname=vamp-plugin-sdk
version=2.2
revision=4
build_style=gnu-configure
makedepends="pkg-config libsndfile-devel"
short_desc="The Vamp audio analysis plugin system"
maintainer="davehome <davehome@redthumb.info.tm>"
license="BSD"
homepage="http://www.vamp-plugins.org/"
distfiles="${SOURCEFORGE_SITE}/vamp/${pkgname}-${version}.tar.gz"
checksum=601d9d9f859b3232afda63ca099e51d81202556bbb0ee275a9aab14bf3d6c766
long_desc="
 Vamp is an audio processing plugin system for plugins that extract descriptive
 information from audio data â€” typically referred to as audio analysis plugins
 or audio feature extraction plugins."

post_install() {
	vinstall COPYING 644 usr/share/licenses/${pkgname}
}

libvamp-plugin-sdk_package() {
	short_desc="${short_desc} - Runtime libraries"
	pkg_install() {
		vmove "usr/lib/*.so*"
	}
}

vamp-plugin-sdk-devel_package() {
	depends="libsndfile-devel libvamp-plugin-sdk>=${version}"
	short_desc="${short_desc} - Development files"
	pkg_install() {
        	vmove usr/include
		vmove "usr/lib/*.a"
        	vmove usr/lib/pkgconfig
	}
}

vamp-plugin-sdk_package() {
	pkg_install() {
		vmove usr
	}
}
