# Template build file for 'glib'
pkgname=glib
version=2.28.3
distfiles="${GNOME_SITE}/glib/2.28/glib-$version.tar.bz2"
configure_args="--disable-fam --with-pcre=system"
build_style=gnu_configure
short_desc="The GNU library of C routines"
maintainer="Juan RP <xtraeme@gmail.com>"
checksum=7e1ab62d0f0cdc3f0ce8214b77d104b3abbd51185a9f3fc9b6a504cce26f6fab
long_desc="
 GLib is a library containing many useful C routines for things such
 as trees, hashes, lists and strings. It is a useful general purpose
 C library used by projects such as GTK+, GIMP and GNOME."

subpackages="glib-devel"
Add_dependency run glibc
Add_dependency run zlib
Add_dependency run libpcre
Add_dependency build gettext
Add_dependency build pkg-config
Add_dependency build zlib-devel
Add_dependency build pcre-devel

post_install()
{
	chmod 644 ${DESTDIR}/etc/bash_completion.d/*.sh
}
