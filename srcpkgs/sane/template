subpackages="lib${pkgname} $pkgname-devel"

Add_dependency build pkg-config
Add_dependency build avahi-libs-devel
Add_dependency build jpeg-devel
Add_dependency build tiff-devel
Add_dependency build libgphoto2-devel
Add_dependency build v4l-utils-devel
Add_dependency build libusb-devel
Add_dependency build net-snmp-devel
Add_dependency build libieee1284-devel

post_install() {
	# fix hp officejets
	echo "#hpaio" >> ${DESTDIR}/etc/sane.d/dll.conf
	# install udev files
	vinstall tools/udev/libsane.rules 644 /lib/udev/rules.d 53-sane.rules
	# fix udev rules
	sed -i 's|NAME="%k", ||g' ${DESTDIR}/lib/udev/rules.d/53-sane.rules
	# Install systemd service.
	vinstall ${FILESDIR}/saned@.service 644 lib/systemd/system
	vinstall ${FILESDIR}/saned.socket 644 lib/systemd/system
}
