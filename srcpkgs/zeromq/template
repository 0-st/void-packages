# Template file for 'zeromq'
pkgname=zeromq
version=4.1.1
revision=1
build_style=gnu-configure
# automake, libtool and pre_configure only for patch. patch shouldn't
# be needed in the next version.
hostmakedepends="pkg-config automake libtool"
makedepends="libsodium-devel"
short_desc="The Intelligent Transport Layer"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="LGPL-2.1"
homepage="http://www.zeromq.org"
distfiles="http://download.zeromq.org/zeromq-${version}.tar.gz"
checksum=43d61e5706b43946aad4a661400627bcde9c63cc25816d4749c67b64c3dab8db

pre_configure() {
	autoreconf -fi
}

zeromq-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/man/man3
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
