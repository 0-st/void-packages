# Template file for 'usbutils'
pkgname=usbutils
version=0.87
distfiles="${KERNEL_SITE}/utils/usb/$pkgname/$pkgname-$version.tar.gz"
build_style=gnu_configure
configure_args="--datadir=/usr/share/hwdata --disable-zlib"
short_desc="Linux USB utilities"
maintainer="Juan RP <xtraeme@gmail.com>"
checksum=76d62db57e36e0c2d8e2c5cfdcdf5bc615b7b9e95f42d0560a19729fe7b3c550
long_desc="
 This package contains utilities for inspecting devices connected to a
 USB bus."

Add_dependency run glibc
Add_dependency run libusb-compat
Add_dependency build which
Add_dependency build libusb-compat-devel

pre_configure()
{
	cd $wrksrc
	rm usb.ids
	$XBPS_FETCH_CMD http://www.linux-usb.org/usb.ids
}

post_install()
{
	mkdir -p ${DESTDIR}/usr/lib
	mv ${DESTDIR}/usr/share/hwdata/pkgconfig ${DESTDIR}/usr/lib
}
