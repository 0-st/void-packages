# Template file for 'gedit'
pkgname=gedit
version=3.10.1
revision=1
# XXX python and zeitgeist plugins.
build_style=gnu-configure
configure_args="--disable-schemas-compile --disable-updater --enable-python=no
 --enable-gvfs-metadata"
hostmakedepends="pkg-config intltool itstool gnome-doc-utils
 gobject-introspection python3"
makedepends="gtksourceview-devel>=3.10 libpeas-devel>=1.9 enchant-devel
 gsettings-desktop-schemas-devel>=3.10 iso-codes"
short_desc="A text editor for GNOME"
maintainer="Juan RP <xtraeme@gmail.com>"
homepage="http://www.gnome.org"
license="GPL-2"
distfiles="${GNOME_SITE}/gedit/${version%.*}/gedit-$version.tar.xz"
checksum=2d2e931661c2c2f9ea76cb581fe0eb09d65925b06a57ee7e20cbecb49474cab7

gedit-devel_package() {
	depends="gtksourceview-devel>=3.10 libpeas-devel>=1.9"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/gtk-doc
		vmove usr/share/gedit/gir-1.0
	}
}

gedit_package() {
	depends="hicolor-icon-theme desktop-file-utils iso-codes"
	pkg_install() {
		vmove all
	}
}
