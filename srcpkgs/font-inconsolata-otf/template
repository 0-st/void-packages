# Template build file for 'font-inconsolata-otf'.
pkgname=font-inconsolata-otf
version=001.010
revision=1
maintainer="Georg Schabel <gescha@posteo.de>"
short_desc="Sans-serif monotype font designed for code listings"
homepage="http://www.levien.com/type/myfonts/inconsolata.html"
license="OFL-1.1"

distfiles="http://levien.com/type/myfonts/Inconsolata.otf"
checksum=1561e616c414a1b82d6e6dfbd18e5726fd65028913ade191e5fa38b6ec375a1a

makedepends="font-util xbps-triggers"
depends="${makedepends}"
noarch="yes"
build_style=fetch
font_dirs="/usr/share/fonts/OTF"

do_install() {
	vmkdir usr/share/fonts/OTF
	install -m644 ${XBPS_SRCDISTDIR}/${pkgname}-${version}/Inconsolata.otf \
		${DESTDIR}/usr/share/fonts/OTF

	vinstall ${FILESDIR}/75-otf-inconsolata.conf 644 \
		etc/fonts/conf.avail
}
