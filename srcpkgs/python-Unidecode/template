python3.4-Unidecode_package() {
	noarch=yes
	depends="python3.4"
	pycompile_version="3.4"
	pycompile_module="unidecode"
	short_desc="${short_desc/Python2/Python3.4}"
	pkg_install() {
		vmove usr/lib/python3.4
	}
}
