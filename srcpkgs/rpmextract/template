# Template file for 'rpmextract'
pkgname=rpmextract
version=1.0
revision=1
short_desc="Script to convert or extract RPM archives (contains rpm2cpio)"
maintainer="Ypnose <linuxienATlegtuxDOTorg>"
license="GPL"
homepage="http://www.archlinux.org"

nofetch=yes
noextract=yes

do_install() {
	vmkdir usr/bin
	vinstall ${FILESDIR}/rpm2cpio 755 usr/bin
	vinstall ${FILESDIR}/rpmextract 755 usr/bin
}

rpmextract_package() {
	depends="bash libarchive coreutils"
	noarch="yes"
	pkg_install() {
		vmove usr
	}
}
