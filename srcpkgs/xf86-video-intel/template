# Template build file for 'xf86-video-intel'.
pkgname=xf86-video-intel
version=2.19.0
distfiles="${XORG_SITE}/driver/$pkgname-$version.tar.bz2"
build_style=gnu-configure
configure_args="--enable-sna"
depends="xorg-server"
makedepends="dri2proto>=2.6 libudev-devel libdrm-devel libpciaccess-devel libXext-devel libXfixes-devel libXv-devel libXvMC-devel libxcb-devel xcb-util-devel xorg-server-devel"
short_desc="Xorg Intel video driver"
maintainer="Juan RP <xtraeme@gmail.com>"
homepage="http://xorg.freedesktop.org/"
license="MIT"
checksum=32133d61b14ce3b45b83a60e4ed8eb75159259d708f056144250aaeabf16e4bc
long_desc="
 This is the video driver for Intel video chips for the
 Xorg X11 server."



post_install() {
	vinstall COPYING 644 usr/share/licenses/${pkgname}
}
