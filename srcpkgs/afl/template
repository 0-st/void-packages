pkgname=afl
version=1.88b
revision=1
build_style=gnu-makefile
# x86 only currently
only_for_archs="i686 i686-musl x86_64 x86_64-musl"
short_desc="American fuzzy lop - a brute-force fuzzer"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="Apache-2.0"
