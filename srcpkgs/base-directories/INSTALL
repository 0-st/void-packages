case "${ACTION}" in
post)
	# Create compat symlinks for /run.
	for d in tmp var/tmp var/run var/lock lib/rc/init.d; do
		[ -d "$d" ] && rmdir "$d"
		[ -h "$d" ] && rm -f "$d"
	done
        ln -sf /run/init.d lib/rc/init.d
        ln -sf /run/tmp tmp
        ln -sf /run/tmp var/tmp
        ln -sf /run var/run
        ln -sf /run/lock var/lock
	;;
esac
