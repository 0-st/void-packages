# Template file for 'pygtk'
pkgname=pygtk
version=2.24.0
revision=5
distfiles="${GNOME_SITE}/$pkgname/2.24/$pkgname-$version.tar.bz2"
build_style=gnu-configure
depends="python pygobject2 pycairo"
# XXX: missing python-numpy build dep
hostmakedepends="pkg-config"
