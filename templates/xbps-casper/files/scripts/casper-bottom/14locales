#! /bin/sh

PREREQ=""
DESCRIPTION="Setting up locales..."

. /scripts/casper-functions

prereqs()
{
       echo "$PREREQ"
}

case $1 in
# get pre-requisites
prereqs)
       prereqs
       exit 0
       ;;
esac

log_begin_msg "$DESCRIPTION"

# commandline
for x in $(cat /proc/cmdline); do
    case $x in
	locale=*)
	    locale=${x#locale=}
	    set_locale="true"
	    ;;
    esac
done

if [ "${set_locale}" ]; then
	echo "LOCALE=$locale" > /root/etc/conf.d/locale
fi

log_end_msg
