# Template build file for 'xsetroot'.
pkgname=xsetroot
version=1.0.3
distfiles="${XORG_SITE}/app/$pkgname-$version.tar.bz2"
build_style=gnu_configure
short_desc="X root window parameter setting program"
maintainer="Juan RP <xtraeme@gmail.com>"
