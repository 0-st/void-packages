# Template build file for 'font-adobe-utopia-100dpi'.
pkgname=font-adobe-utopia-100dpi
version=1.0.1
distfiles="${XORG_SITE}/font/$pkgname-$version.tar.bz2"
build_style=gnu_configure
short_desc="100dpi Adobe Utopia PCF fonts"
maintainer="Juan RP <xtraeme@gmail.com>"
checksum=1943e1aa70c169b13bc7a308c8e949267f9ce6327479803203fbf10c06a9b5fe
long_desc="
 These are the PCF versions of the following Adobe fonts for 100dpi displays:
  - Adobe Utopia

 This is from the modular Xorg project."

Add_dependency full font-util

noarch=yes
font_dirs="/usr/lib/X11/fonts/100dpi"
triggers="x11-fonts"

post_install()
{
	rm -f ${DESTDIR}/${font_dirs}/fonts.*
}
