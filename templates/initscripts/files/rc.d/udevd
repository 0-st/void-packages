#!/bin/sh
#
# PROVIDE: udevd

$_rc_subr_loaded . /etc/rc.subr

name="udevd"
rcvar=$name
command="/sbin/udevd"
command_args="--daemon"
start_precmd="udevd_precmd"

udevd_precmd()
{
	# More initial /dev setup that udev doesn't do
	[ ! -d /dev/pts ] && /bin/mkdir /dev/pts
	[ ! -d /dev/shm ] && /bin/mkdir /dev/shm

	echo > /proc/sys/kernel/hotplug
	echo
}

load_rc_config $name
run_rc_command "$1"
