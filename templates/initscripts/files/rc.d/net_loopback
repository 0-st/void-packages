#!/bin/sh
#
# PROVIDE: net_loopback
# REQUIRE: SERVERS
# BEFORE: checkfs

$_rc_subr_loaded . /etc/rc.subr

name="net_loopback"
start_cmd="loopback_start"
stop_cmd=":"

loopback_start()
{
	if [ -d /sys/class/net/lo ]; then
        	echo -n "=> Bringing up loopback interface... "
        	ifconfig lo 127.0.0.1 up
        	show_rval
	fi
}

load_rc_config $name
run_rc_command "$1"
