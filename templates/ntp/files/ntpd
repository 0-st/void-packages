#!/bin/sh
#
# $NetBSD: ntpd,v 1.13 2004/08/13 18:08:03 mycroft Exp $
#

# PROVIDE: ntpd
# REQUIRE: DAEMON
# BEFORE:  LOGIN

$_rc_subr_loaded . /etc/rc.subr

name="ntpd"
rcvar=$name
command="/usr/bin/${name}"
pidfile="/var/run/${name}.pid"
required_files="/etc/ntp.conf"

load_rc_config $name
run_rc_command "$1"
