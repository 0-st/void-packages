pkgname=xbps
version=0.1
distfiles="http://launchpad.net/xbps/$version/$version/+download/xbps-$version.tar.gz"
build_style=gnu_makefile
make_install_target="DESTDIR=$XBPS_DESTDIR/$pkgname-$version PREFIX= install"
