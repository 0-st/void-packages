#!/bin/sh
#
# PROVIDE: mountd
# REQUIRE: portmap nfslock
# KEYWORD: shutdown

$_rc_subr_loaded . /etc/rc.subr

name="mountd"
rcvar=$name
command="/usr/sbin/rpc.mountd"
procname=${command}
start_precmd="mountd_precmd"

mountd_precmd()
{
	/usr/sbin/exportfs -r
}

load_rc_config $name
run_rc_command "$1"
