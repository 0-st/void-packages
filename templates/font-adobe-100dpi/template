# Template build file for 'font-adobe-100dpi'.
pkgname=font-adobe-100dpi
version=1.0.0
distfiles="${XORG_SITE}/font/$pkgname-$version.tar.bz2"
build_style=gnu_configure
short_desc="Standard 100dpi Adobe PCF fonts"
maintainer="Juan RP <xtraeme@gmail.com>"
checksum=f16c1b3a1625c9a225aff2ac12067bd3907d157b0c60625689a5080f092e9a19
long_desc="
 Theses are the PCF versions of the following Adobe fonts for 100dpi displays:
  - Courier
  - Helvetica
  - New Century Schoolbook
  - Symbol
  - Times

 This is from the modular Xorg project."

Add_dependency full font-util

noarch=yes
font_dirs="/usr/lib/X11/fonts/100dpi"
triggers="x11-fonts"

post_install()
{
	rm -f ${DESTDIR}/${font_dirs}/fonts.*
}
