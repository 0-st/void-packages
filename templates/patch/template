# Template file for 'patch'
pkgname=patch
version=2.5.9
distfiles="ftp://alpha.gnu.org/gnu/diffutils/patch-$version.tar.gz"
build_style=gnu_configure
short_desc="Patch files using diff output"
maintainer="Juan RP <xtraeme@gmail.com>"
